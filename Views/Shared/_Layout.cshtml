<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlaceFinder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" integrity="sha384-tViUnnbYAV00FLIhhi3v/dWt3Jxw4gZQcNoSCxCIFNJVCx7/D55/wXsrNIRANwdD" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Navbar personalizado */
        .navbar-custom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: #ffffff;
            border-bottom: 1px solid #ddd;
        }

        /* Estilo para el lado derecho */
        .navbar-right {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        /* Ícono corazón */
        .icon-heart {
            font-size: 20px;
            color: #dc3545; /* Rojo */
            cursor: pointer;
        }

        /* Botón de iniciar sesión */
        .login-btn {
            border: 1px solid #ddd;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
            text-decoration: none;
            color: #000;
            transition: all 0.3s ease-in-out;
        }

            .login-btn:hover {
                background-color: #f8f9fa;
                color: #0056b3;
            }

        /* Footer */
        footer {
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: center;
            font-size: 14px;
            border-top: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <!-- Logotipo -->
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand fw-bold text-primary">
                <img src="~/images/logo-placeholder.png" alt="PlaceFinder Logo" style="width: 40px; height: 40px;" class="me-2" />
                PlaceFinder
            </a>

            <!-- Sección de la derecha -->
            <div class="navbar-right">
                <!-- Corazón -->
                <i class="bi bi-heart-fill icon-heart"></i>
                <!-- Botón Iniciar sesión -->
                <a asp-controller="Account" asp-action="Login" class="login-btn">
                    <i class="bi bi-person-circle"></i> Iniciar sesión
                </a>
            </div>
        </nav>
    </header>

    <!-- Contenido principal -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script async
            src="https://maps.googleapis.com/maps/api/js?key=@Environment.GetEnvironmentVariable("GOOGLE_MAPS_API_KEY")&callback=initMap">
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
