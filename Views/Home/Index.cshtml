<div class="container mt-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold text-primary">Place Finder 🌍</h1>
        <p class="lead text-secondary">Discover and save your favorite places effortlessly!</p>
    </div>

    <!-- Tarjeta de búsqueda -->
    <div class="card shadow-sm mb-4 border-0 rounded-3">
        <div class="card-body">
            <h4 class="mb-3 text-center text-primary">🔍 Find Places</h4>
            <div class="row g-3">
                <div class="col-md-5">
                    <input type="text" class="form-control border-0 shadow-sm" id="query" placeholder="Search Query (e.g., Café)">
                </div>
                <div class="col-md-5">
                    <input type="text" class="form-control border-0 shadow-sm" id="location" placeholder="Location (e.g., New York)">
                </div>
                <div class="col-md-2 text-center">
                    <button class="btn btn-primary w-100 shadow-sm fw-bold" onclick="searchPlaces()">Search</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Google Maps -->
    <div id="map" class="rounded shadow-sm" style="height: 500px; margin-top: 20px;"></div>
</div>
